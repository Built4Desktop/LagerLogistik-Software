<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<GridPane fx:id="loginPane" alignment="CENTER" hgap="10" vgap="10" stylesheets="@bootstrapfx.css"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oranjelogistiksoftware.LoginController"
          style="-fx-background-color: grey; -fx-padding: 20;">

<!-- Define a VBox as the login box with styling -->
<VBox alignment="CENTER" spacing="15" GridPane.columnIndex="0" GridPane.rowIndex="0"
      style="-fx-background-color: #2C2D2A; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: orange; -fx-border-width: 1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);">

    <Label text="Oranje Beton" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0274f5;"/>

    <Label text="Username:" style="-fx-text-fill: white;"/>
    <TextField fx:id="usernameField" promptText="Enter your username"/>

    <Label text="Password:" style="-fx-text-fill: white;"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password"/>

    <Button text="Login" onAction="#handleLoginButtonAction" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold;"/>
</VBox>
</GridPane>